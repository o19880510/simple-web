	<!-- 定时任务配置 START -->
	<bean id="scheduleJobFactory" class="com.lutongnet.statistics.top.ScheduleJobFactory"
		init-method="schedule">
		<property name="scheduleGroupList">
			<list>
				<bean class="com.lutongnet.statistics.top.ScheduleJobGroup">
					<!-- cron 时间表达式，定义此组任务执行时间 -->
					<property name="cron" value="0 0 * * * ?" />
					<property name="jobs">
						<list>
							<bean class="com.lutongnet.statistics.job.ScheduleJobDemo">
								<property name="desc" value="描述此任务功能，在管理界面上展示" />
							</bean>
							<bean class="com.lutongnet.summary.job.TotalUserOrderDailyJob">
								<property name="desc" value="这是一个测试任务类" />
							</bean>
						</list>
					</property>
				</bean>
				<bean class="com.lutongnet.statistics.top.ScheduleJobGroup">
					<property name="cron" value="10 0 * * * ?" />
					<property name="jobs">
						<list>
							<bean class="com.lutongnet.statistics.job.ScheduleJobDemo">
								<property name="desc" value="这是一个测试任务类" />
							</bean>
						</list>
					</property>
				</bean>
			</list>
		</property>
	</bean>
	<!-- 定时任务配置 END -->
